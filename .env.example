# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# Supabase PostgreSQL connection string.
# Local dev:   use the direct connection (port 5432)
#   Project Settings → Database → Connection String → URI
# Vercel/prod: use the Transaction pooler (port 6543) with ?pgbouncer=true
#   Project Settings → Database → Connection Pooling → Transaction mode URI
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-HOST]:5432/postgres"

# Public base URL — used for sitemap generation.
# Set this to your Vercel production domain.
NEXT_PUBLIC_BASE_URL="https://yourdomain.com"
